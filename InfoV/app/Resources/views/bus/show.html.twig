{% extends 'menu.html.twig' %}

{% block title %}Infoviajes{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container">
    <div class="cold-md-12">
        <div class="page-header margin-none">
            <h1>Registro exitoso</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bus.id }}</td>
            </tr>
            <tr>
                <th>Matriculabus</th>
                <td>{{ bus.matriculaBus }}</td>
            </tr>
            <tr>
                <th>Capacidadbus</th>
                <td>{{ bus.capacidadBus }}</td>
            </tr>
            <tr>
                <th>Descripcionbus</th>
                <td>{{ bus.descripcionBus }}</td>
            </tr>
            <tr>
                <th>Choferbus</th>
                <td>{{ bus.choferBus }}</td>
            </tr>
            <tr>
                <th>Ayudantebus</th>
                <td>{{ bus.ayudanteBus }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if bus.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bus_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bus_edit', { 'id': bus.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
            </div><div/></div></div>
{% endblock %}
