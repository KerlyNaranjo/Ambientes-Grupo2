{% extends 'menu.html.twig' %}

{% block title %}Infoviajes{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container">
    <div class="cold-md-12">
        <div class="page-header margin-none">
            <h1>Lista de buses registrados</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricula</th>
                <th>Capacidad</th>
                <th>Descripcion</th>
                <th>Chofer</th>
                <th>Ayudante</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for bus in buses %}
            <tr>
                <td><a href="{{ path('bus_show', { 'id': bus.id }) }}">{{ bus.id }}</a></td>
                <td>{{ bus.matriculaBus }}</td>
                <td>{{ bus.capacidadBus }}</td>
                <td>{{ bus.descripcionBus }}</td>
                <td>{{ bus.choferBus }}</td>
                <td>{{ bus.ayudanteBus }}</td>
                <td>{% if bus.isActive %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bus_show', { 'id': bus.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bus_edit', { 'id': bus.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bus_new') }}">Create a new bus</a>
        </li>
    </ul>
            </div>
        </div>
    </div>
{% endblock %}
