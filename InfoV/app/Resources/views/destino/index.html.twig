{% extends 'menu.html.twig' %}

{% block title %}Infoviajes{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container">
    <div class="cold-md-12">
        <div class="page-header margin-none">
            <h1>Lista de destinos registrados</h1>
        </div>
        <select>
            {% for des in destinos %}
                <option>{{ des.lugarDestino }}</option>
            {% endfor %}
        </select>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lugar</th>
                <th>Tiempo</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for destino in destinos %}
            <tr>
                <td><a href="{{ path('destino_show', { 'id': destino.id }) }}">{{ destino.id }}</a></td>
                <td>{{ destino.lugarDestino }}</td>
                <td>{{ destino.tiempoDestino }}</td>
                <td>{{ destino.precioDestino }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('destino_show', { 'id': destino.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('destino_edit', { 'id': destino.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('destino_new') }}">Create a new destino</a>
        </li>
    </ul>
            </div>
        </div>
    </div>
{% endblock %}
