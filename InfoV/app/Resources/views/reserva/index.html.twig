{% extends 'menu.html.twig' %}

{% block title %}Infoviajes{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container">
    <div class="cold-md-12">
        <div class="page-header margin-none">
            <h1>Horarios de salida</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Numero de asiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for reserva in reservas %}
            <tr>
                <td><a href="{{ path('reserva_show', { 'id': reserva.id }) }}">{{ reserva.id }}</a></td>
                <td>{% if reserva.fechaReserva %}{{ reserva.fechaReserva|date('Y-m-d') }}{% endif %}</td>
                <td>{{ reserva.numeroAsiento }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reserva_show', { 'id': reserva.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reserva_edit', { 'id': reserva.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        </div>
        </div>
    </div>
{% endblock %}
