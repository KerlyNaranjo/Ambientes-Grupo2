{% extends 'menu.html.twig' %}

{% block title %}Infoviajes{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container">
    <div class="cold-md-12">
        <div class="page-header margin-none">
            <h1>Horarios de salida</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Horasalida</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horario in horarios %}
            <tr>
                <td><a href="{{ path('horario_show', { 'id': horario.id }) }}">{{ horario.id }}</a></td>
                <td>{% if horario.horaSalida %}{{ horario.horaSalida|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('horario_show', { 'id': horario.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('horario_edit', { 'id': horario.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('horario_new') }}">Create a new horario</a>
        </li>
    </ul>
            </div>
        </div>
    </div>
{% endblock %}
