{% extends 'menu.html.twig' %}

{# Modal ver include para añadir otro twig#}
{% block title %}Infoviajes{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="cold-md-12">
        <div class="row" id="usuario">
            <div class=" col col-lg-5 col-md-3 col-sm-12">
                <h1>Reserva ahora tu boleto</h1>
            </div>
            <div class="col col-lg-7 col-md-9 col-sm-12">
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-inline">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"  />
                    {% endif %}

                    <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Nombre de usuario" />

                    <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Contraseña"/>

                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    
                    <a href="/register" class="btn btn-primary">Regístrate</a>
                    <br>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </form>
                <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            {# {{ include('user/new.html.twig') }} #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br>

        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('public/images/foto4.jpeg') }}" alt="First slide">
                </div>
            </div>
        </div>

        <!--Buscar por operadoras-->
        <div class="col text-center"><h1>Visita nuestras cooperativas</h1></div>
        <div class="row">
            <div class="col-xs-6 col-md-3">
                <a href="http://www.cooperativabanos.com.ec/" class="thumbnail">
                    <img src="{{ asset('public/images/logoBanos.gif') }}" alt="...">
                </a>
            </div>
            <div class="col-xs-6 col-md-3">
                <a href="http://www.reinadelcamino.ec/" class="thumbnail">
                    <img src="{{ asset('public/images/logoReina.png') }}" alt="...">
                </a>
            </div>
            <div class="col-xs-6 col-md-3">
                <a href="http://www.transesmeraldas.com/" class="thumbnail">
                    <img src="{{ asset('public/images/logoEsmeraldas.png') }}" alt="...">
                </a>
            </div>
        </div>

        <footer>
            {% block footer %}
                <div class="container">
                    <div class="row">
                        <div class="col-8 text-white">
                            <p><strong>Infoviajes</strong> Copyright: © 2017. Todos los derechos reservados.</p>
                        </div>
                        <div class="col-4" id="sociales">
                            <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                        </div>
                        <br><br>
                    </div>
                </div>
            {% endblock %}
        </footer>
    </div>
</div>

</div>
{% endblock %}
