{% trans_default_domain 'FOSUserBundle' %}
{% extends 'menu.html.twig' %}
{% block body %}
    {{ parent() }}
    <div class="main container">
        <div class="row well">
            <div class="cold-md-6">
                <div class="page-header">
                    <h1>Registrarse</h1>
                </div>
                {{ form_start(form, {'attr' : {'role' : 'form'}}) }}
                <div class="form-group">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre'} }) }}
                    <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                </div>
                <div class="form-group">
                    {{ form_label(form.apellido) }}
                    {{ form_widget(form.apellido, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Apellido'} }) }}
                    <span class="text-danger">{{ form_errors(form.apellido) }}</span>
                </div>
                <div class="form-group">
                    {{ form_label(form.cedula) }}
                    {{ form_widget(form.cedula, { 'attr' : {'class' : 'form-control', 'placeholder' : 'CÃ¨dula'} }) }}
                    <span class="text-danger">{{ form_errors(form.cedula) }}</span>
                </div>
                <div class="form-group">
                    {{ form_label(form.discapacidad) }}
                    {{ form_widget(form.discapacidad, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Discapacidad'} }) }}
                    <span class="text-danger">{{ form_errors(form.discapacidad) }}</span>
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Email'} }) }}
                    <span class="text-danger">{{ form_errors(form.email) }}</span>
                </div>
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Usuario'} }) }}
                    <span class="text-danger">{{ form_errors(form.username) }}</span>
                </div>
                    <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
                {{ form_end(form) }}
                
            </div>
        </div>
    </div>
{% endblock %}
