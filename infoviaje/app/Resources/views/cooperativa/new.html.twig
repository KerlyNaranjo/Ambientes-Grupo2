{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="main container">
        <div class="row well">
            <div class="cold-md-6">
                <div class="page-header">
                    <h1>Cooperativa creation</h1>
                </div>


                {{ form_start(form, {'attr' : {'role' : 'form'}}) }}

                {#
                    {{ form_widget(form) }}
                #}

                <div class="form-group">
                    {{ form_label(form.nombreCoop) }}
                    {{ form_widget(form.nombreCoop, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Your nombreCoop'} }) }}
                    <span class="text-danger">{{ form_errors(form.nombreCoop) }}</span>

                </div>
                <div class="form-group">
                    {{ form_label(form.rucCoop) }}
                    {{ form_widget(form.rucCoop, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Your rucCoop'} }) }}
                    <span class="text-danger">{{ form_errors(form.rucCoop) }}</span>

                </div>
                <input type="submit" value="Create" />
                {{ form_end(form) }}

                <ul>
                    <li>
                        <a href="{{ path('cooperativa_index') }}">Back to the list</a>
                    </li>
                </ul>

            </div>

        </div>

    </div>
{% endblock %}
