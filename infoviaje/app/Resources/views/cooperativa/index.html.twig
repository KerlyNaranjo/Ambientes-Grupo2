{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="cold-md-12">
            <div class="page-header margin-none">
                <h1>Cooperativas list</h1>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombrecoop</th>
                        <th>Ruccoop</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cooperativa in cooperativas %}
                        <tr>
                            <td><a href="{{ path('cooperativa_show', { 'id': cooperativa.id }) }}">{{ cooperativa.id }}</a></td>
                            <td>{{ cooperativa.nombreCoop }}</td>
                            <td>{{ cooperativa.rucCoop }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('cooperativa_show', { 'id': cooperativa.id }) }}" class="btn btn-sm btn-info">show</a>
                                        <a href="{{ path('cooperativa_edit', { 'id': cooperativa.id }) }}" class="btn btn-sm btn-primary">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>


            <ul>
                <li>
                    <a href="{{ path('cooperativa_new') }}" class="btn btn-info">Create a new cooperativa</a>
                </li>
            </ul>
        </div>

    </div>



{% endblock %}