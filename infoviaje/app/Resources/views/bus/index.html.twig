{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="cold-md-12">
            <div class="page-header margin-none">
                <h1>Buses list</h1>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Matricula</th>
                        <th>Capacidad</th>
                        <th>Descripcionbus</th>
                        <th>Nomchofer</th>
                        <th>Nomayudante</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for bus in buses %}
                        <tr>
                            <td><a href="{{ path('bus_show', { 'id': bus.id }) }}">{{ bus.id }}</a></td>
                            <td>{{ bus.matricula }}</td>
                            <td>{{ bus.capacidad }}</td>
                            <td>{{ bus.descripcionBus }}</td>
                            <td>{{ bus.nomChofer }}</td>
                            <td>{{ bus.nomAyudante }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('bus_show', { 'id': bus.id }) }}" class="btn btn-sm btn-info">show</a>
                                        <a href="{{ path('bus_edit', { 'id': bus.id }) }}" class="btn btn-sm btn-primary">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>


    <ul>
        <li>
            <a href="{{ path('bus_new') }}" class="btn btn-info">Create a new bus</a>
        </li>
    </ul>
        </div>
    </div>
{% endblock %}
